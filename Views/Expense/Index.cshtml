@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">create new Expense</a>
        </div>
    </div>
    @{ if (Model.Count() > 0)
        {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Expense name</th>
                    <th>Amount</th>
                    <th>actions</th>
                </tr>                
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="35%">@expense.ExpenseName</td>
                        <td width="35%">@expense.Amount</td>  
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">update expense</a>
                                <a asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">delete expense</a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
        else
        {
        <p>No Expenses created yet</p>
        }
     }
</div>

